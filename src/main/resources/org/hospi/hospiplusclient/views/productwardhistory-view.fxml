<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.hospi.hospiplusclient.controllers.ProductWardHistoryController" prefWidth="800" prefHeight="600">

    <TextField fx:id="searchField" layoutX="20" layoutY="20" promptText="Search by quantity" prefWidth="200"/>

    <TableView fx:id="historyTable" layoutX="20" layoutY="60" prefWidth="760" prefHeight="300">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="productWardColumn" text="ProductWard"/>
            <TableColumn fx:id="quantityColumn" text="Quantity"/>
            <TableColumn fx:id="createdAtColumn" text="Created At"/>
        </columns>
    </TableView>

    <Label text="ProductWard:" layoutX="20" layoutY="380"/>
    <ComboBox fx:id="productWardComboBox" layoutX="150" layoutY="375" prefWidth="200"/>

    <Label text="Quantity:" layoutX="20" layoutY="420"/>
    <TextField fx:id="quantityField" layoutX="150" layoutY="415" prefWidth="200"/>

    <Button text="Add" layoutX="400" layoutY="380" onAction="#handleAdd"/>
    <Button text="Update" layoutX="500" layoutY="380" onAction="#handleUpdate"/>
    <Button text="Delete" layoutX="600" layoutY="380" onAction="#handleDelete"/>
    <Button text="Clear" layoutX="700" layoutY="380" onAction="#handleClear"/>
</AnchorPane>
